.container
    h1 {{ entry.title }}
    .row
        .col-md-6
            h3(ng-show="entry.featured") Featured
            h3 Published on {{ entry.published | date}}

        .col-md-6
            .panel.panel-primary
                .panel-heading Tags
                .panel-body
                    div(ng-repeat="tag in entry.tags") {{ tag }}